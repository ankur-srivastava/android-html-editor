<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:orientation="vertical">
<RelativeLayout 
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    
    android:orientation="vertical" >

    

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/icon"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="5dp"
        android:text="Settings"
      
        android:textSize="32dp"
        android:textColor="#0099cc" />

    
    <!--  time for buttons -->
    <TextView
        android:id="@+id/addServer"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView1"
        android:textSize="18dp"
        android:textColor="#ffffff"
        android:layout_marginTop="0dp"
        android:paddingTop="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingBottom="10dp"
        
        android:text="Add a FTP Server" />

<TextView
        android:id="@+id/importServer"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/addServer"
        android:textSize="18dp"
        android:textColor="#ffffff"
        android:paddingTop="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingBottom="10dp"
        
        android:text="Import FTP Servers (XML)" />
 
    <TextView
        android:id="@+id/accounts"
        android:layout_below="@+id/importServer"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textSize="18dp"
        android:textColor="#ffffff"   
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        
        android:text="Edit FTP Server Details" />
  
    <TextView
        android:id="@+id/addTheme"
        android:layout_below="@+id/accounts"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textSize="18dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        
        android:textColor="#ffffff"  
        android:text="Add a Theme" />
    
  <TextView
        android:id="@+id/importTheme"
        android:layout_below="@+id/addTheme"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textSize="18dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        
        android:textColor="#ffffff"
        android:text="Import a Theme" /> 
        
    <TextView
        android:id="@+id/setTheme"
         android:layout_below="@+id/importTheme"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textSize="18dp"
        android:textColor="#ffffff"   
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:text="Set Default Theme" />
 
    <TextView
        android:id="@+id/currentTheme"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/setTheme"
        android:textSize="8dp"
        android:paddingLeft="10dp"
        android:background="#00000000"
         android:layout_marginTop="-24dp"
         android:visibility="gone"
        android:text="" /> 
         
    <TextView
        android:id="@+id/fontStyle"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textSize="18dp"
        android:textColor="#ffffff"   
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingBottom="10dp"
        
        android:paddingTop="10dp"
        android:layout_below="@+id/currentTheme"
        android:text="Set Font Style" />
    <TextView
        android:id="@+id/currentFontStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="8dp"
        android:paddingLeft="10dp"
        android:layout_below="@+id/fontStyle"
         android:layout_marginTop="-14dp"
        android:text="" />
    
     
   <TextView
        android:id="@+id/fontSize"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textSize="18dp"
        android:textColor="#ffffff" 
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingBottom="10dp"
        
        android:paddingTop="10dp"
        android:layout_below="@+id/currentFontStyle"
        android:text="Font Size" />
    <TextView
        android:id="@+id/currentFontSize"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fontSize"
        android:textSize="8dp"
        android:paddingLeft="10dp"
        android:layout_marginTop="-14dp"
        android:text="" /> 
    
    
    

    
    
    
    
    
    <com.zen.androidhtmleditor.CheckedText
        android:id="@+id/lineNumbers"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/currentFontSize"
                android:textSize="18dp"
        android:textColor="#ffffff"  
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingBottom="5dp"
        android:paddingTop="10dp"
        
        android:checkMark="?android:attr/listChoiceIndicatorMultiple"
        android:text="Toggle Line Numbers" />


    
    <com.zen.androidhtmleditor.CheckedText
        android:id="@+id/syntax"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
                android:textSize="18dp"
        android:textColor="#ffffff"  
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingBottom="5dp"
        android:paddingTop="10dp"
        
        android:checkMark="?android:attr/listChoiceIndicatorMultiple"
       android:layout_below="@+id/lineNumbers"
        android:text="Toggle Syntax Highlighting" />

    
    

    
  
   <TextView
        android:id="@+id/rateme"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textSize="18dp"
        android:textColor="#ffffff" 
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingBottom="10dp"
        
        android:paddingTop="10dp"
        android:layout_below="@+id/syntax"
        android:text="Rate Android HTML Editor" />
    

    


    

    

    

    

</RelativeLayout>
</ScrollView>